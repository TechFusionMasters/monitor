<Window x:Class="SystemActivityTracker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="System Activity Tracker" 
        Height="900" Width="1200" 
        MinHeight="600" MinWidth="800"
        Background="{StaticResource BackgroundBrush}">
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Compact Header -->
        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" 
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="System Activity Tracker" Style="{StaticResource SubHeaderTextStyle}" VerticalAlignment="Center"/>
                    <TextBlock Text="â€¢ Track active, idle, and locked time" Style="{StaticResource SecondaryTextStyle}" 
                               VerticalAlignment="Center" Margin="12,0,0,0"/>
                </StackPanel>

                <Border Grid.Column="1" CornerRadius="8" Padding="10,8" Margin="12,0,0,0" VerticalAlignment="Center">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#FFF3F4F6"/>
                            <Setter Property="BorderBrush" Value="#FFE5E7EB"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                    <Setter Property="Background" Value="#FFEAF7EF"/>
                                    <Setter Property="BorderBrush" Value="#FFBFE6CF"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Stopped">
                                    <Setter Property="Background" Value="#FFFEF2F2"/>
                                    <Setter Property="BorderBrush" Value="#FFFECACA"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid VerticalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Stopped: single static dot -->
                        <Ellipse x:Name="StoppedDot" Grid.Column="0" Width="10" Height="10" Margin="0,0,8,0" VerticalAlignment="Center" Fill="{StaticResource ErrorBrush}">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>

                        <!-- Running: green dot + 3 activity dots -->
                        <StackPanel x:Name="RunningDots" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Visibility="Collapsed" Margin="0,0,8,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Ellipse Width="10" Height="10" Fill="{StaticResource SuccessBrush}" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" Margin="6,0,0,0" VerticalAlignment="Center">
                                <Ellipse Width="4" Height="4" Margin="0,0,3,0" Fill="{StaticResource SuccessBrush}" Opacity="0.25">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard Name="Dot1Storyboard">
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.25" To="1"
                                                                                 Duration="0:0:0.6" AutoReverse="True" BeginTime="0:0:0"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <StopStoryboard BeginStoryboardName="Dot1Storyboard"/>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>

                                <Ellipse Width="4" Height="4" Margin="0,0,3,0" Fill="{StaticResource SuccessBrush}" Opacity="0.25">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard Name="Dot2Storyboard">
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.25" To="1"
                                                                                 Duration="0:0:0.6" AutoReverse="True" BeginTime="0:0:0.2"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <StopStoryboard BeginStoryboardName="Dot2Storyboard"/>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>

                                <Ellipse Width="4" Height="4" Fill="{StaticResource SuccessBrush}" Opacity="0.25">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                                    <DataTrigger.EnterActions>
                                                        <BeginStoryboard Name="Dot3Storyboard">
                                                            <Storyboard RepeatBehavior="Forever">
                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.25" To="1"
                                                                                 Duration="0:0:0.6" AutoReverse="True" BeginTime="0:0:0.4"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </DataTrigger.EnterActions>
                                                    <DataTrigger.ExitActions>
                                                        <StopStoryboard BeginStoryboardName="Dot3Storyboard"/>
                                                    </DataTrigger.ExitActions>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
                                    <Setter Property="Text" Value="Stopped"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                            <Setter Property="Text" Value="Running"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Stopped">
                                            <Setter Property="Text" Value="Stopped"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content - Summary + Tabs -->
        <Grid Grid.Row="1" Margin="16,12,16,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Combined Summary Card -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Column 1: Day Summary -->
                    <Border Grid.Column="0" Background="White" CornerRadius="10" Padding="12" Margin="6" BorderBrush="#E5E7EB" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.12"/>
                        </Border.Effect>

                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Selected Day" Style="{StaticResource SectionHeaderTextStyle}" VerticalAlignment="Center"
                                           FontWeight="SemiBold" FontSize="15" Margin="0,0,0,8"/>
                                <DatePicker Grid.Column="1" SelectedDate="{Binding SelectedDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Width="140"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Active" FontSize="13" Margin="0,3,12,3"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedDayActiveText}" FontSize="13" Margin="0,3,0,3"
                                           HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Idle" FontSize="13" Margin="0,3,12,3"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedDayIdleText}" FontSize="13" Margin="0,3,0,3"
                                           HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Locked" FontSize="13" Margin="0,3,12,3"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedDayLockedText}" FontSize="13" Margin="0,3,0,3"
                                           HorizontalAlignment="Left"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Column 2: Week Summary -->
                    <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="12" Margin="6" BorderBrush="#E5E7EB" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.12"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="This Week" Style="{StaticResource SectionHeaderTextStyle}" Margin="0,0,0,8"
                                       FontWeight="SemiBold" FontSize="15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Active" FontSize="13" Margin="0,3,12,3"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding WeeklyTotalActiveText}" FontSize="13" Margin="0,3,0,3"
                                           HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Total Idle" FontSize="13" Margin="0,3,12,3"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding WeeklyTotalIdleText}" FontSize="13" Margin="0,3,0,3"
                                           HorizontalAlignment="Left"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Locked" FontSize="13" Margin="0,3,12,3"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding WeeklyTotalLockedText}" FontSize="13" Margin="0,3,0,3"
                                           HorizontalAlignment="Left"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Column 3: Controls + Developer/Test -->
                    <Border Grid.Column="2" Background="White" CornerRadius="10" Padding="12" Margin="6" BorderBrush="#E5E7EB" BorderThickness="1">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="1" Opacity="0.12"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="Controls" Style="{StaticResource SectionHeaderTextStyle}" Margin="0,0,0,8"
                                       FontWeight="SemiBold" FontSize="15"/>

                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Row 1 -->
                                <Button Grid.Row="0" Grid.Column="0" Content="Start Tracking" Command="{Binding StartCommand}" 
                                        Margin="0,0,10,6" HorizontalAlignment="Stretch">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource HeaderBackgroundBrush}"
                                        BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="4"
                                        Padding="10" Margin="0,0,0,6">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Ellipse Style="{StaticResource PulsingLargeStatusIndicatorStyle}"/>
                                        <TextBlock VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock" BasedOn="{StaticResource BodyTextStyle}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                                            <Setter Property="Text" Value="Running"/>
                                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Stopped">
                                                            <Setter Property="Text" Value="Stopped"/>
                                                            <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                    <Setter Property="Text" Value="Unknown"/>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Border>

                                <!-- Row 2 -->
                                <Button Grid.Row="1" Grid.Column="0" Content="Stop Tracking" Command="{Binding StopCommand}" 
                                        Margin="0,0,10,0" HorizontalAlignment="Stretch">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButtonStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Running">
                                                    <Setter Property="Background" Value="#DC2626"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding TrackingStatus}" Value="Tracking status: Stopped">
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Grid.Row="1" Grid.Column="1" Content="Refresh Summary" Command="{Binding RefreshCommand}" 
                                        Style="{StaticResource SecondaryButtonStyle}" HorizontalAlignment="Stretch"/>
                            </Grid>

                            <!-- Developer/Test section (keep existing visual design) -->
                            <Border Style="{StaticResource TestModeCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Developer / Test" Style="{StaticResource BodyTextStyle}" 
                                               FontWeight="SemiBold" Margin="0,0,0,6"/>
                                    <CheckBox Content="Test mode" Style="{StaticResource ModernCheckBoxStyle}" 
                                              IsChecked="{Binding IsTestMode, Mode=TwoWay}" Margin="0,0,0,4"/>
                                    <TextBlock Text="Enables Force Write Now button" Style="{StaticResource SecondaryTextStyle}" 
                                               FontSize="11" Margin="0,0,0,8"/>
                                    <Button Content="Force Write Now" Style="{StaticResource SecondaryButtonStyle}" 
                                            Command="{Binding ForceWriteNowCommand}" IsEnabled="{Binding IsTestMode}" 
                                            HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            <!-- Tabs -->
            <TabControl Grid.Row="1" Style="{StaticResource ModernTabControlStyle}">
                
                <!-- Application Usage Tab -->
                <TabItem Header="Application Usage" Style="{StaticResource ModernTabItemStyle}">
                    <Grid Margin="0,10,0,0">
                        <Border Style="{StaticResource CardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Text="Application Usage" Style="{StaticResource SectionHeaderTextStyle}"/>
                                
                                <DataGrid Grid.Row="1" ItemsSource="{Binding TodayAppUsage}" Style="{StaticResource ModernDataGridStyle}"
                                          VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                          ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,8,0,0">
                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ModernDataGridColumnHeaderStyle}"/>
                                    </DataGrid.ColumnHeaderStyle>
                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow" BasedOn="{StaticResource ModernDataGridRowStyle}"/>
                                    </DataGrid.RowStyle>
                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell" BasedOn="{StaticResource ModernDataGridCellStyle}"/>
                                    </DataGrid.CellStyle>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="App / Process" Binding="{Binding ProcessName}" Width="2*"/>
                                        <DataGridTextColumn Header="Active Time" Binding="{Binding ActiveDurationText, Mode=OneWay}" Width="1*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Weekly Overview Tab -->
                <TabItem Header="Weekly Overview" Style="{StaticResource ModernTabItemStyle}">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Weekly Overview Header -->
                        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="Weekly Overview" Style="{StaticResource SectionHeaderTextStyle}" VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Text="Week start:" Style="{StaticResource BodyTextStyle}" 
                                               VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <DatePicker SelectedDate="{Binding WeekStartDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="140" Margin="0,0,8,0"/>
                                    <Button Content="Load" Style="{StaticResource SecondaryButtonStyle}" 
                                            Command="{Binding LoadWeeklyCommand}"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Weekly Overview DataGrid -->
                        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                            <DataGrid ItemsSource="{Binding WeeklySummaries}" Style="{StaticResource ModernDataGridStyle}"
                                      VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ModernDataGridColumnHeaderStyle}"/>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow" BasedOn="{StaticResource ModernDataGridRowStyle}"/>
                                </DataGrid.RowStyle>
                                <DataGrid.CellStyle>
                                    <Style TargetType="DataGridCell" BasedOn="{StaticResource ModernDataGridCellStyle}"/>
                                </DataGrid.CellStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Date" Binding="{Binding Date, Mode=OneWay, StringFormat={}{0:dd-MMM-yyyy}}" Width="1*"/>
                                    <DataGridTextColumn Header="Active" Binding="{Binding ActiveDurationText, Mode=OneWay}" Width="1*"/>
                                    <DataGridTextColumn Header="Idle" Binding="{Binding IdleDurationText, Mode=OneWay}" Width="1*"/>
                                    <DataGridTextColumn Header="Locked" Binding="{Binding LockedDurationText, Mode=OneWay}" Width="1*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>

                        <!-- Weekly Totals -->
                        <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                            <StackPanel>
                                <TextBlock Text="Weekly Totals" Style="{StaticResource SectionHeaderTextStyle}"/>
                                <TextBlock Text="{Binding WeeklyTotalActiveText}" Style="{StaticResource BodyTextStyle}" Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding WeeklyTotalIdleText}" Style="{StaticResource BodyTextStyle}" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding WeeklyTotalLockedText}" Style="{StaticResource BodyTextStyle}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </TabItem>

                <!-- Settings Tab -->
                <TabItem Header="Settings" Style="{StaticResource ModernTabItemStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0,10,0,0">
                        <StackPanel>

                            <!-- Settings Card -->
                            <Border Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Settings" Style="{StaticResource SectionHeaderTextStyle}"/>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Text="Idle (min):" Style="{StaticResource BodyTextStyle}" 
                                                   VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                        <TextBox Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,6"
                                                 Text="{Binding IdleThresholdMinutes, UpdateSourceTrigger=PropertyChanged}"/>
                                        
                                        <TextBlock Grid.Row="1" Text="Poll (sec):" Style="{StaticResource BodyTextStyle}" 
                                                   VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                        <TextBox Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,6"
                                                 Text="{Binding PollIntervalSeconds, UpdateSourceTrigger=PropertyChanged}"/>
                                        
                                        <CheckBox Grid.Row="2" Grid.ColumnSpan="2" Content="Enable live refresh" 
                                                  Style="{StaticResource ModernCheckBoxStyle}" Margin="0,0,0,6"
                                                  IsChecked="{Binding EnableLiveRefresh, Mode=TwoWay}"/>
                                        
                                        <TextBlock Grid.Row="3" Text="Refresh (sec):" Style="{StaticResource BodyTextStyle}" 
                                                   VerticalAlignment="Center" Margin="0,0,8,0" Width="80"/>
                                        <TextBox Grid.Row="3" Grid.Column="1" Style="{StaticResource ModernTextBoxStyle}" Margin="0,0,0,12"
                                                 Text="{Binding LiveRefreshIntervalSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                        
                                        <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Save Settings" 
                                                Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Stretch"
                                                Command="{Binding SaveSettingsCommand}"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
